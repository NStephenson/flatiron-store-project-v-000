<%= render "categories/list_categories" %>

<% @items.each do |item| %>
  <div class="no-wrap">
    <h4>
      <%= link_to item.title, item_path(item) %> | 
      <%= number_to_currency(item.price/100.00) %> | 
      <%= button_to 'Add to Cart', line_items_path(item_id: item) %>
    </h4>
  </div>
  <br>
<% end %>