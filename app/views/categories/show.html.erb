<h1><%= @category.title %></h1>
<hr>

<% @category.items.each do |item| %>
  <div class="no-wrap">
    <h4>
      <%= link_to item.title, item_path(item) %> | $<%= item.price/100.00 %>
      <% if !!current_user %>
        | <%= button_to 'Add to Cart', line_items_path(item_id: item) %>
      <% end %>
    <h4>
  </div>
  <br>
<% end %>
